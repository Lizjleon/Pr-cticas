<section class="card center-card">
  <h2><%= curso ? 'Editar curso' : 'Nuevo curso' %></h2>
  <form action="<%= curso ? '/admin/courses/' + curso.id + '?_method=PUT' : '/admin/courses/new' %>" method="post">
    <label>Título
      <input name="titulo" required value="<%= curso ? curso.titulo : '' %>" />
    </label>
    <label>Categoría
      <input name="categoria" value="<%= curso ? curso.categoria : '' %>" />
    </label>
    <label>Visibilidad
      <select name="visibilidad">
        <option value="publico" <%= curso && curso.visibilidad === 'publico' ? 'selected' : '' %>>Público</option>
        <option value="registrados" <%= curso && curso.visibilidad === 'registrados' ? 'selected' : '' %>>Solo registrados</option>
      </select>
    </label>
    <label>Descripción
      <textarea name="descripcion"><%= curso ? curso.descripcion : '' %></textarea>
    </label>
    <button class="btn">Guardar</button>
  </form>
</section>
