<!doctype html><html><head><meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1"><title>Login participante</title><link rel="stylesheet" href="/css/styles.css"></head><body>
<%- include('partials/nav') %>
<main class="container">
  <div class="card">
    <h1>Iniciar sesión (participante)</h1>
    <% if (messages.error) { %><div class="alert alert-error"><%= messages.error %></div><% } %>
    <form method="post" action="/login">
      <div class="form-group"><label>DNI</label><input name="dni" required></div>
      <div class="form-group"><label>Contraseña</label><input type="password" name="password" required></div>
      <button class="btn btn-pastel" type="submit">Entrar</button>
    </form>
  </div>
</main>
<footer class="footer"><a class="return" href="/">Volver a Inicio</a></footer></body></html>